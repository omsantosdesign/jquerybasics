<!-- jQuery Actions and Events 
$= speak jQuery, 
document=our current page, 
ready=wait for page to load before running function
-->


<script type="text/javascript">
	$(document).ready(function(){
					$("button#hide").click(function(){
						$(this).hide();
					});
			
					$("button#hideh1").click(function(){
						$("h1").toggle();
					});

					$("button#hamburger").click(function(){
						$("nav").toggle();
					});

		});

</script>

<body>
	<h1> JQuery baby!</h1>
	
	<button id="hide">Click me to make me disappear!</button>
	
	<button id="hideh1">Click me to make me H1 disappear and reappear!</button>
	
	<button id="hamburger">â˜°</button>
	
	<button>Click me to change the background color</button>


		<nav>
