<!-- jQuery Actions and Events 
$= speak jQuery, 
document=our current page, 
ready=wait for page to load before running function
-->
<script src="js/stellar.js-master/jquery.stellar.min.js" ></script>



<script type="text/javascript">
	$(document).ready(function(){
					$("button#hide").click(function(){
						$(this).hide();
					});
			
					$("button#hideh1").click(function(){
						$("h1").toggle();
					});

					$("button#hamburger").click(function(){
						$("nav").toggle();
					});

		});
</script>



<script type="text/javascript">
	$(document).ready(function(){
		$(window).stellar();
	});


</script>


<!--
data-stellar-background-ratio="#"
to control the scroll speed of background images in relation to the page scroll-->

